<% layout('layouts/boilerPlate.ejs') %>
<body>
    <h3 class="text-center my-2">Create a New Listing</h3>
    <form method="post" action="http://localhost:6060/api/listings" class="needs-validation p-5 row" novalidate>
        <div class="col-md-6 py-2">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" id="title" placeholder="enter title name" class="form-control" required>
            <div class="valid-feedback">
               Title Looks good! 
              </div>
        </div>
        <div class="col-md-6 py-2">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="price" id="price" placeholder="enter price" class="form-control" required>
            <div class="invalid-feedback">
                price should be enter
              </div>
        </div>
        <div class="col-md-6 py-2">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" id="location" placeholder="location name" class="form-control" required>
            <div class="invalid-feedback">
                enter location
              </div>
        </div>
        <div class="col-md-6 py-2">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="country" id="country" placeholder="country name" class="form-control" required>
            <div class="valid-feedback">
                enter the name country
              </div>
        </div>
        <div class="py-2">
            <label for="img" class="form-label">Img Link</label>
            <input type="text" name="image" id="img" placeholder="enter img url" class="form-control">
        </div>
        <div class="py-2">
            <label for="desc" class="form-label">description</label>
            <textarea name="desc" id="desc" rows="10" class="form-control" placeholder="description should be must!" required></textarea>
            <div class="invalid-feedback">
                description should be must!
              </div>
        </div>
        <div class="d-grid py-2">
            <button type="submit" class="btn btn-primary">submit</button>
        </div>
    </form>
</body>
