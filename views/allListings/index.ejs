<% layout('layouts/boilerPlate.ejs') %>
<body>
    <h1>All-Listings</h1>
    <div class="allCards">
    <% for(let listings of allListings) { %>
        <div class="card m-2" style="width: 20rem;">
          <a href="/api/listings/<%= listings._id %>"><img src="<%= listings.image %>" class="card-img-top" alt="img" width="100" height="150"> </a>
            <div class="card-body text-center">
             <a href="/api/listings/<%= listings._id %>" class="text-decoration-none text-dark"> <h3 class="card-title"><%= listings.title %></h3></a>
              <p> <i class="fa-solid fa-rupee-sign"></i> <%= listings.price %> / night <br><i class="fa-solid fa-location-dot"></i> <%= listings.country %></p>
            </div>
          </div>
   <% } %>
</ul>
</body>